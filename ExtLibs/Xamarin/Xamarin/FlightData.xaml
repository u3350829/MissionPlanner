<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Xamarin"
             xmlns:forms="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             xmlns:controls="clr-namespace:MissionPlanner.Controls;assembly=Xamarin"
             xmlns:GMap="clr-namespace:GMap.NET.WindowsForms;assembly=Xamarin"
             x:Class="Xamarin.FlightData">

    <ContentPage.Content>
        <AbsoluteLayout>
 <GMap:GMapControl AbsoluteLayout.LayoutBounds="0,0,1,1"
                          AbsoluteLayout.LayoutFlags="All"  x:Name="GMapControl"> </GMap:GMapControl>

                <controls:HUD AbsoluteLayout.LayoutBounds="1,0,0.3,0.2"
                              AbsoluteLayout.LayoutFlags="All" x:Name="Hud"></controls:HUD>


            <Switch x:Name="CHK_autopan"   AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,1,0.1,0.1"  ></Switch>
            <Slider x:Name="TRK_zoom"   AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="1,1,0.9,0.1" ValueChanged="Slider_OnValueChanged"></Slider>


        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
